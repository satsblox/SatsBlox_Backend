# ============================================
# SatsBlox Backend - Environment Configuration
# ============================================
# Copy this file to .env and populate with real values.
# NEVER commit .env to version control.
# For local development, you can use the docker-compose.yml to spin up PostgreSQL.

# ---- Express Server ----
PORT=3000

# ---- PostgreSQL Database ----
# Format: postgresql://[user][:password]@[host][:port]/[database]
# For local development with docker-compose, use:
#   DATABASE_URL=postgresql://postgres:postgres@localhost:5432/satsblox
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/satsblox

# ---- JWT ----
# Use a strong, random secret in production. Never use the default.
JWT_SECRET=change_this_to_a_real_secret_in_production

# ---- Environment ----
# Values: development, staging, production
NODE_ENV=development

# ---- Optional: Logging ----
# Values: debug, info, warn, error
LOG_LEVEL=info
